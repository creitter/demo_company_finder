<%= form_for(@company) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :size %><br>
    <%= f.number_field :size %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :industry %><br>
    <%= f.text_field :industry %>
  </div>
  <div class="field">
    <%= f.label :revenue %><br>
    <%= f.text_field :revenue %>
  </div>

  <div id="contact_list">
    <%= f.fields_for :contacts do |contact_fields| %>
      <div class="field contact">
        Name: <%= contact_fields.text_field :name %>
        Email: <%= contact_fields.text_field :email %>
        Phone: <%= contact_fields.text_field :phone %>
        <input type="button" value="Remove" class="remove-btn" />
      </div>
    <% end %>
  </div>
  
  <div class="field new_contact">
    <%= f.fields_for :contact do |contact_form| %>
      <%= contact_form.label :name %>:
      <%= contact_form.text_field :name %>
      <%= contact_form.label :email %>:
      <%= contact_form.text_field :email %>
      <%= contact_form.label :phone %>:
      <%= contact_form.text_field :phone %>
      <%= contact_form.button :Add, {id: "add_contact"} %>
    <% end %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
